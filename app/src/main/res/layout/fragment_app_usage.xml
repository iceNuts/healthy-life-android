<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background_light"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_background_light">

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center|center_vertical"
            android:id="@+id/linearLayout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/percent_usage"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="of total app usage"
                android:id="@+id/textView7"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Goal"
            android:id="@+id/create_goal"
            android:background="@color/blue_primary"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Goal"
            android:id="@+id/edit_goal"
            android:background="@color/blue_primary"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:weightSum="2"
            android:id="@+id/user">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Goal Set"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:paddingBottom="4dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textView14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Goal - "
                    android:id="@+id/textView"
                    android:paddingBottom="4dp"
                    android:textColor="@color/primary_text_default_material_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_goal"
                    android:paddingBottom="4dp"
                    android:textColor="@color/grey_text_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Used - "
                    android:id="@+id/textView2"
                    android:paddingBottom="4dp"
                    android:textColor="@color/primary_text_default_material_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_used"
                    android:paddingBottom="4dp"
                    android:textColor="@color/grey_text_light" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:weightSum="2"
            android:id="@+id/usage"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/inner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Usage Statistics Today"
                    android:id="@+id/textView10"
                    android:textSize="20dp"
                    android:paddingBottom="4dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/usage_list">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:weightSum="2"
            android:id="@+id/barchart_container"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent">

            <org.eazegraph.lib.charts.ValueLineChart
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/usage_chart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:egUseCubic="true"
                app:egUseOverlapFill="true"
                app:egCurveSmoothness="0.4"
                app:egIndicatorLineColor="#FE6DA8"
                app:egLegendHeight="40dp"
                app:egShowStandardValue="true"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>