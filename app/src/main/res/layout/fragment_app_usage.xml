<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background_light"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_background_light">

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center|center_vertical"
            android:id="@+id/linearLayout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="56%"
                android:id="@+id/textView6"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="of total app usage"
                android:id="@+id/textView7"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Goal"
            android:id="@+id/create_goal"
            android:background="@color/blue_primary"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Goal"
            android:id="@+id/edit_goal"
            android:background="@color/blue_primary"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:weightSum="2"
            android:id="@+id/user">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Goal Set"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:paddingBottom="4dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/textView14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Goal - "
                    android:id="@+id/textView"
                    android:paddingBottom="4dp"
                    android:textColor="@color/primary_text_default_material_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/current_goal"
                    android:paddingBottom="4dp"
                    android:textColor="@color/grey_text_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Used - "
                    android:id="@+id/textView2"
                    android:paddingBottom="4dp"
                    android:textColor="@color/primary_text_default_material_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_used"
                    android:paddingBottom="4dp"
                    android:textColor="@color/grey_text_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lifelines Used - "
                    android:id="@+id/textView3"
                    android:paddingBottom="4dp"
                    android:textColor="@color/primary_text_default_material_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lifelines_used"
                    android:paddingBottom="4dp"
                    android:textColor="@color/grey_text_light" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:weightSum="2"
            android:id="@+id/usage"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/inner" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Usage Statistics"
                    android:id="@+id/textView10"
                    android:textSize="20dp"
                    android:paddingBottom="4dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/usage_list">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/8/2014 - 20 m"
                        android:id="@+id/textView20"
                        android:paddingBottom="4dp"
                        android:textColor="@color/primary_text_default_material_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/6/2014 - 50 m"
                        android:id="@+id/textView21"
                        android:paddingBottom="4dp"
                        android:textColor="@color/primary_text_default_material_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/5/2014 - 3 h"
                        android:id="@+id/textView22"
                        android:paddingBottom="4dp"
                        android:textColor="@color/primary_text_default_material_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/2/2014 - 1 m"
                        android:id="@+id/textView23"
                        android:paddingBottom="4dp"
                        android:textColor="@color/primary_text_default_material_light" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/Card"
            android:orientation="vertical"
            android:weightSum="2"
            android:id="@+id/barchart_container"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent">

            <org.eazegraph.lib.charts.BarChart
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:egFixedBarWidth="true"
                app:egBarWidth="36dp"
                app:egLegendHeight="40dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>