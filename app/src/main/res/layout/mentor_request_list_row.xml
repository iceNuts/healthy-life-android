<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/Card"
        android:id="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="top"
            android:weightSum="1"
            android:id="@+id/linearLayout"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:longClickable="true"
            android:layout_weight="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brian Rehg"
                android:id="@+id/user"
                android:layout_toEndOf="@+id/app_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/app_icon"
                android:layout_toRightOf="@+id/app_icon"
                android:layout_alignTop="@+id/app_icon"
                android:textSize="22dp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request you as a mentor"
                    android:id="@+id/app_name"
                    android:textColor="@color/grey_text_dark"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical">

                <android.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:text="{fa-clock-o}"
                    android:textSize="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/fa_clock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:06 on 10/15/22"
                    android:id="@+id/last_stat"
                    android:textColor="@color/grey_text_dark"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <android.widget.IconTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="{fa-close}"
            android:textSize="42dp"
            android:textColor="@color/red_primary"
            android:id="@+id/deny"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center" />

        <android.widget.IconTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="{fa-check}"
            android:textSize="42dp"
            android:textColor="@color/green_primary"
            android:id="@+id/approve"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>



</RelativeLayout>